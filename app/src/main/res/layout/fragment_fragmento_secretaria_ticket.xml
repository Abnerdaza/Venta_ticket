<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmento_secretaria.fragmento_secretaria_ticket">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="414dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="#7FD5C5"
            android:gravity="center_horizontal"
            android:text="Subir stock becado"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="28sp" />
        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="70dp"
            android:text="Periodo Stock"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/text_perido_stock"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:maxLength="10"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="60dp"
            android:text="Stock de Ticket"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/text_stock"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@android:color/black"
            android:textSize="24sp" />



        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="#7FD5C5"
            android:text="Comprar"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp" />

    </LinearLayout>




</FrameLayout>